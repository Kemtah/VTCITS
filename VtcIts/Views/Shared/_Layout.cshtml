<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Argonne VTC Intermim Scheduler</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @RenderSection("Styles", required: false)

    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left" width="100%">
                    <a href="/Home/Index/" style="outline: none;text-decoration: none;border: 0px;">
                        <img src="/Images/frankenlogo.png" align="absmiddle" style="border: 0px;" />
                        <span class="site-title">VTC Intermim Scheduling Tool</span>
                    </a>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Calendar", "Index", "Home")</li>
                            <li>@Html.ActionLink("List", "Index", "Meeting")</li>
                            @if (Request.IsAuthenticated) {
                                <li>@Html.ActionLink("Models", "Models", "Home")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Argonne VTC Interim Scheduler</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
